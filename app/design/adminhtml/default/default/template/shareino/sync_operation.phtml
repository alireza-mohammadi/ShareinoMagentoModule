<script>
    jQuery.noConflict();
    jQuery(function() {
        var messageBox = jQuery("#MessageBox");
        var messageText = jQuery("#MessageText");

        jQuery('.sync-category').on('submit', function(e) {
            e.preventDefault();
            messageBox.hide();
            jQuery.ajax({
                type: 'GET',
                dataType: 'JSON',
                url: '<?php echo $this->getOperationAction("syncCategory"); ?>',
                data: {
                    ajax: true,
                    action: 'syncCategory',
                    ids: 1
                },
                success: function(data, textStatus, jqXHR) {
                    if (data.status === false) {
                        messageText.html(data.message);
                        messageBox.show(500);
                        messageBox.addClass('alert-danger');
                    }
                    if (data.status === true) {
                        messageText.html("دسته بندی ها شما با موفقیت به سایت شرینو ارسال شد.");
                        messageBox.show(500);
                        messageBox.addClass('alert-success');
                    }
                },
                error: function(data) {
                    messageText.html(data.responseText);
                    messageBox.show(500);
                    messageBox.addClass("alert-danger");
                }
            });
        });

        var split = 50;
        var pageNumber = 0;
        var countProduct = <?php echo Mage::registry('countProduct'); ?>;
        var pageCount = Math.ceil(countProduct / split);
        var progress = jQuery("#progress");
        var submitProgress = jQuery("#sync-progress");
        jQuery('.sync-products').on('submit', function(e) {
            e.preventDefault();
            messageBox.hide();
            progress.show(500);
            submitProgress.show();
            setPercentage();
            SyncProducts();
        });

        function SyncProducts() {
            if (pageNumber === pageCount) {
                messageText.html('تمام محصولات شما با موفقیت به سایت شرینو ارسال شد.');
                messageBox.removeClass('alert-warning');
                messageBox.removeClass('alert-danger');
                messageBox.addClass('alert-success');
                messageBox.show(500);
                return;
            }
            jQuery.ajax({
                type: 'GET',
                dataType: 'JSON',
                url: '<?php echo $this->getOperationAction("syncProducts"); ?>',
                data: {
                    ajax: true,
                    action: 'syncProducts',
                    pageNumber: pageNumber
                },
                success: function(data) {
                    if (data.status === false) {
                        if (data.message === '429') {
                            messageText.html('فرایند ارسال محصولات زمانی به طول می انجامد لطفا صبور باشید.');
                            messageBox.addClass('alert-warning');
                            messageBox.show(500);
                            setTimeout(SyncProducts(), 61 * 1000);
                        } else {
                            messageText.html(data.message);
                            messageBox.show(500);
                            messageBox.addClass('alert-danger');
                        }
                    } else {
                        pageNumber++;
                        setPercentage();
                        SyncProducts();
                    }
                },
                error: function(data) {
                    messageText.html(data.message);
                    messageBox.show(500);
                    messageBox.addClass("alert-danger");
                }
            });
        }
        function setPercentage() {
            var percentage = Math.round((100 * (pageNumber * split)) / countProduct);
            percentage = percentage > 100 ? 100 : percentage;
            submitProgress
                    .css("width", percentage + "%")
                    .attr("aria-valuemin", percentage + "%")
                    .html(percentage + "%");
        }
    });
</script>
